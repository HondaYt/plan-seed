.main {
    display: flex;
    width: 100%;
    height: 100vh;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: 6.4rem;
}

.genres {
    display: flex;
    gap: 2rem;
}

.genreBtn {
    display: grid;
    place-items: center;
    width: 10rem;
    aspect-ratio: 1;
    background: tomato;
}

.PrimaryBtn {
    padding: 1rem 5rem;
    border-radius: 1rem;
    background: var(--primary-color);
    color: #fff;
    font-weight: bold;
}